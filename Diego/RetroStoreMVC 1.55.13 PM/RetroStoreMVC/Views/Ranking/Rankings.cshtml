@{
    ViewData["Title"] = "SetRanking";
}

@{
    if (Model.Rankings.Count > 0)
            {
                <p> The overall ranking for @Model.Name is @Model.OverallRanking</p>
    }
    else
            {
                <p> Be the first to rank @Model.Name</p>
            }
}
@{using (Html.BeginForm())
    {
        for(int i = 0; i < 10; i++)
                {
                    <input type="radio" id="Rank" name="Rank" value="@i"/> @i
                }
                <input type="submit" value="Submit"/>
    }

 }