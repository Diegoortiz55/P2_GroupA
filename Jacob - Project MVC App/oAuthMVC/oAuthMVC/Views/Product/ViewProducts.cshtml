@model IEnumerable<oAuthMVC.Models.Products>

@{
    ViewData["Title"] = "ViewProducts";
}

<h1>View Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPlatform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productManufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productIsInStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
