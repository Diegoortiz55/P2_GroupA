                @Html.DisplayFor(modelItem => item.productType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productPlatform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productManufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productIsInStock)
            </td>
